set nocompatible " be iMproved required
filetype plugin indent on " required

set tabstop=2 		" sets tab indent to 2 spaces
set shiftwidth=2	" sets how wide shift will indent
set expandtab		" why is this here again?

" setting line numbering
set number

" setting color scheme
colorscheme pablo

" use built in fuzzy finder in vim
set path+=**
set wildmenu

" setting to show Window's style file ending carriage return ^M
set ffs=unix
